@model FacilityViewModel

        <div class="modal-content" id="update-facility-modal">
            <div class="modal-header">
                <fieldset>
                    <legend>
                        <i class="fa fa-plus"></i>
                        &nbsp;Update Facility
                    </legend>
                </fieldset>
            </div>
            <div class="modal-body">
                <form asp-controller="Admin" asp-action="UpdateFacility" method="post">
                    <input asp-for="Id" hidden />
                    <!-- FACILITY NAME -->
                    <div class="form-group">
                        <label>Facility name:</label>
                        <input class="form-control" type="text" asp-for="Name" autofocus required>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <!-- ABBREVATION -->
                    <div class="form-group">
                        <label>Abbr:</label>
                        <input class="form-control" type="text" asp-for="Abbrevation">
                        <span class="text-danger" asp-validation-for="Abbrevation"></span>
                    </div>
                    <!-- PROVINCE -->
                    <div class="form-group">
                        <label>Province:</label>
                        <select class="form-control" id="province-filter" asp-for="Province" asp-items="ViewBag.Provinces" onchange="ProvinceOnChange($(this).val());">
                            <option value="">Select Province</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Province"></span>
                    </div>
                    <!-- MUNCITY -->
                    <div class="form-group">
                        <label>Municipality:</label>
                        <select class="form-control" id="muncity-filter" asp-for="Muncity" asp-items="ViewBag.Muncities" onchange="MuncityOnChange($(this).val());">
                            <option value="">Select Municipality</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Muncity"></span>
                    </div>
                    <!-- BARANGAY -->
                    <div class="form-group">
                        <label>Barangay:</label>
                        <select class="form-control" id="barangay-filter" asp-for="Barangay" asp-items="ViewBag.Barangays">
                            <option value="">Select Barangay</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Barangay"></span>
                    </div>
                    <!-- ADDRESS -->
                    <div class="form-group">
                        <label>Address:</label>
                        <input class="form-control" type="text" asp-for="Address" required>
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                    <!-- CONTACT -->
                    <div class="form-group">
                        <label>Contact:</label>
                        <input class="form-control" type="text" asp-for="Contact" required>
                        <span class="text-danger" asp-validation-for="Contact"></span>
                    </div>
                    <!-- EMAIL -->
                    <div class="form-group">
                        <label>Email:</label>
                        <input class="form-control" type="text" asp-for="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <!-- CHIEF -->
                    <div class="form-group">
                        <label>Chief of hospital(name):</label>
                        <input class="form-control" type="text" asp-for="Chief">
                        <span class="text-danger" asp-validation-for="Chief"></span>
                    </div>
                    <!-- LEVEL -->
                    <div class="form-group">
                        <label>Hospital Level:</label>
                        <select class="form-control" asp-for="Level" asp-items="ViewBag.Levels">
                            <option value="">Select Hospital Level</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Level"></span>
                    </div>
                    <!-- TYPE -->
                    <div class="form-group">
                        <label>Hospital Type:</label>
                        <select class="form-control" asp-for="Type" asp-items="ViewBag.Types">
                            <option value="">Select Hospital Type</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Type"></span>
                    </div>
                    <!-- STATUS -->
                    <div class="form-group">
                        <label>Hospital Status:</label>
                        <select class="form-control" asp-for="Status" asp-items="ViewBag.Status">
                            <option value="">Select Hospital Type</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Status"></span>
                    </div>
                    <hr>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> Cancel
                </button>
                <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#remove-facility-alert" value="@Model.Id">
                    <i class="fa fa-times"></i> Remove
                </button>
                <button class="btn btn-success btn-sm" data-save="modal">
                    <i class="fa fa-check"></i>
                    &nbsp;Save
                </button>
            </div>
        </div>