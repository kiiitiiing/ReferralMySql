@model Referral2.Models.ViewModels.Inventory.InventoryModel

<div class="modal-content" id="update_inventory_modal">
    <div class="modal-header">
        <h4>
            <i class="fa fa-plus"></i>
            &nbsp;Update Inventory
        </h4>
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">×</span>
        </button>
    </div>
    <div class="modal-body">
        <form asp-action="UpdateInventory">
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label>Description:</label>
                <input type="text" class="form-control" asp-for="Name" readonly />
            </div>
            <div class="form-group">
                <label>Capacity:</label>
                <input type="number" class="form-control" asp-for="Capacity" />
            </div>
            <div class="form-group">
                <label>Occupied:</label>
                <input type="number" class="form-control" asp-for="Occupied" />
            </div>
        </form>
        @if (ViewBag.Errors != null)
        {
            <div class="row" style="margin-top: 20px;">
                <div class="col-sm-12 center" style="align-content:center">
                    <span class="text-danger text-sm">Please input the required fields.</span>
                </div>
            </div>
        }
    </div>

    <div class="modal-footer" style="display: inline-block !important;">
        <button class="btn btn-sm btn-danger fa-pull-left" type="button" data-dismiss="modal">
            Cancel
        </button>
        <button class="btn btn-sm btn-success fa-pull-right" data-action="small_modal" data-save="modal">
            Submit
        </button>
    </div>
</div>