@model UpdateDoctorViewModel

<div class="modal fade" id="update-doctor-modal">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <fieldset>
                    <legend>
                        <i class="fa fa-user-plus"></i>
                        &nbsp;Update User
                    </legend>
                </fieldset>
            </div>
            <div class="modal-body">
                <form asp-controller="Support" asp-action="UpdateUser" method="post">
                    <input asp-for="Id" hidden />
                    <!-- FIRST NAME -->
                    <div class="form-group">
                        <label>First Name:</label>
                        <input type="text" class="form-control" asp-for="Firstname" required>
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <!-- MIDDLE NAME -->
                    <div class="form-group">
                        <label>MIddle Name:</label>
                        <input type="text" class="form-control" asp-for="Middlename" required>
                        <span asp-validation-for="Middlename" class="text-danger"></span>
                    </div>
                    <!-- LAST NAME -->
                    <div class="form-group">
                        <label>Last Name:</label>
                        <input type="text" class="form-control" asp-for="Lastname" required>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <!-- CONTACT NUMBER -->
                    <div class="form-group">
                        <label>Contact Number:</label>
                        <input type="text" class="form-control" asp-for="ContactNumber" required>
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                    <!-- EMAIL ADDRESS -->
                    <div class="form-group">
                        <label>Email Address:</label>
                        <input type="text" class="form-control" asp-for="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <hr />
                    <!-- DESIGNATION -->
                    <div class="form-group">
                        <label>Designation:</label>
                        <input type="text" class="form-control" asp-for="Designation" required>
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                    <!-- DEPARTMENT -->
                    <div class="form-group">
                        <label>Department:</label>
                        <select class="form-control" asp-for="Department" asp-items="ViewBag.Departments" required>
                            <option>Select Department...</option>
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                    <hr />
                    <!-- STATUS -->
                    <div class="form-group">
                        <label>Status:</label>
                        <select type="text" class="form-control" asp-for="Status" asp-items="ViewBag.Status" required>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <!-- LEVEL -->
                    <div class="form-group">
                        <label>Level:</label>
                        <select class="form-control" asp-for="Level" required>
                            <option value="doctor">Doctor</option>
                            <option value="mcc">Medical Center Chief</option>
                        </select>
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>
                    <hr />
                    <!-- USERNAME -->
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" class="form-control" asp-for="Username" required>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <!-- PASSWORD -->
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" class="form-control" asp-for="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <!-- CONFIRM PASSWORD -->
                    <div class="form-group">
                        <label>Confirm Password:</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <!-- REFER FOOTER -->
            <div class="modal-footer justify-content-end">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-times"></i>
                    &nbsp;Close
                </button>
                <button class="btn btn-success" data-save="modal">
                    <i class="fa fa-check"></i>
                    &nbsp;Save
                </button>
            </div>
        </div>
    </div>
</div>
