@model IEnumerable<OnlineFacilitiesModel>
@{
    ViewData["Title"] = "Online Facilities";
    var date = DateTime.Parse(ViewBag.Date).ToString("MMMM d, yyyy");
}


<div class="col-md-12">
    <div class="card card-success card-outline">
        <div class="card-header">
            <form class="fa-pull-right form-inline" asp-action="OnlineFacilities" method="get">
                <input class="form-control form-control-sm" id="datetimepicker" type="text" name="date" value="@ViewBag.Date" />
                <button type="submit" value="Search" class="btn btn-sm btn-success">
                    <i class="fa fa-calendar"></i>
                    &nbsp;Change Date
                </button>
            </form>
            <h4>
                Online Facilities
                <br />
                <small class="text-success">
                    @date
                </small>
            </h4>
        </div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr class="bg-black">
                                <th> </th>
                                <th>Facility Name</th>
                                <th>Login Time</th>
                                <th>Logout Time</th>
                                <th>Number of hours online</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(x=>x.LoginTime != default).GroupBy(x => x.Province))
                            {
                                var ctr = 1;
                                <tr>
                                    <td colspan="6">
                                        <strong class="text-green">@item.Key Province</strong>
                                    </td>
                                </tr>
                                @foreach (var facility in item)
                                {
                                    var status = facility.Status ? "Active" : "Inactive";
                                    var logout = facility.LogoutTime != default ? facility.LogoutTime.ToString("yyyy-MM-dd HH:mm:ss") : "";
                                    <tr>
                                        <td>@ctr</td>
                                        <td>@facility.Name</td>
                                        <td>@facility.LoginTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        <td>@logout</td>
                                        <td>@facility.HoursOnline.HoursOnline()</td>
                                        <td>@status</td>
                                    </tr>
                                    ctr++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <span class="">
                        <i class="fa fa-warning"></i>
                        &nbsp;No data found!
                    </span>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true,
            forceParse: true
        });
    })
</script>